{
  "kind": "collectionType",
  "collectionName": "applicants",
  "info": {
    "singularName": "applicant",
    "pluralName": "applicants",
    "displayName": "Applicant"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email"
    },
    "qualifications": {
      "type": "component",
      "component": "qualifications.qualifications",
      "repeatable": false
    },
    "personalInfo": {
      "type": "component",
      "component": "personal-info.personal-information",
      "repeatable": false
    },
    "experience": {
      "type": "component",
      "component": "experience.work-experience",
      "repeatable": false
    },
    "availability": {
      "type": "component",
      "component": "availability.day-availability",
      "repeatable": true
    },
    "agreements": {
      "type": "component",
      "component": "agreements.agreement-confirmation",
      "repeatable": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "applicants"
    },
    "applicationStatus": {
      "type": "enumeration",
      "default": "applicationSubmitted",
      "enum": [
        "applicationStarted",
        "applicationSubmitted",
        "activated",
        "review",
        "interview",
        "onboarding",
        "locationRejected",
        "applicantRejected",
        "expired"
      ]
    }
  }
}
